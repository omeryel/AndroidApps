<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileTab">

    <EditText
        android:id="@+id/edt_profileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Profile Name"
        android:inputType="textPersonName"
        android:textColorHint="#74FF6E40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_favoriteSport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Favorite Sport"
        android:inputType="textPersonName"
        android:textColorHint="#74FF6E40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_hobbies"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edt_hobbies"
        app:layout_constraintTop_toBottomOf="@+id/edt_hobbies" />

    <EditText
        android:id="@+id/edt_profession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Professions"
        android:inputType="textPersonName"
        android:textColorHint="#74FF6E40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_hobbies"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_hobbies"
        app:layout_constraintTop_toBottomOf="@+id/edt_favoriteSport" />

    <EditText
        android:id="@+id/edt_hobbies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Hobbies"
        android:inputType="textPersonName"
        android:textColorHint="#74FF6E40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_bio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edt_bio"
        app:layout_constraintTop_toBottomOf="@+id/edt_bio" />

    <EditText
        android:id="@+id/edt_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Bio"
        android:inputType="textPersonName"
        android:textColorHint="#74FF6E40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_profileName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edt_profileName"
        app:layout_constraintTop_toBottomOf="@+id/edt_profileName" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        android:text="Update info"
        android:textSize="24sp"
        app:backgroundTint="#FF6E40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_favoriteSport"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edt_favoriteSport"
        app:layout_constraintTop_toBottomOf="@+id/edt_profession" />
</androidx.constraintlayout.widget.ConstraintLayout>