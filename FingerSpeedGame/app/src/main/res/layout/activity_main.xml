<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#008080">

    <TextView
        android:id="@+id/timerTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal"
        android:text="@string/timer_text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thousandTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/a_thousand"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/timerTxt"
        app:layout_constraintStart_toStartOf="@+id/timerTxt"
        app:layout_constraintTop_toBottomOf="@id/timerTxt" />

    <Button
        android:id="@+id/btnTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:shadowRadius="10"
        android:text="@string/button_text"
        android:textSize="36sp"
        app:cornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="@+id/thousandTxt"
        app:layout_constraintStart_toStartOf="@+id/thousandTxt"
        app:layout_constraintTop_toBottomOf="@+id/thousandTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>